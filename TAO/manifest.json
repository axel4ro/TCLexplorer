{
  "manifest_version": 3,
  "name": "TAO Wallet",
  "description": "Web3 Wallet for Bittensor Subnet 114 (TAO).",
  "version": "1.0.0",
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["inject.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon48.png"
  },
  "host_permissions": ["<all_urls>"]
}
